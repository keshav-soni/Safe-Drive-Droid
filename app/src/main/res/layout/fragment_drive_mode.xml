<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.core.labs.callblock.Fragments.DriveModeFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="0dp">

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/enabledrivemode"
        android:id="@+id/enableDriveMode"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:button="@drawable/checkbox_style"
        android:id="@+id/autoEnable"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/autoEnableText"
        android:text="@string/fragment_drive_mode_autoEnableText"
        />

</LinearLayout>
